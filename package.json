{
  "name": "@ernesto-butto/moodle-mcp-server",
  "version": "0.2.1",
  "description": "MCP server for Moodle LMS with multi-course support - enables AI assistants to manage courses, students, assignments, and quizzes",
  "private": false,
  "type": "module",
  "author": "Ernesto Butto",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ernesto-butto/moodle-mcp-server.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "moodle",
    "lms",
    "education",
    "ai",
    "claude",
    "anthropic"
  ],
  "bin": {
    "moodle-mcp-server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "axios": "^1.8.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "axios-mock-adapter": "^2.1.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  }
}
